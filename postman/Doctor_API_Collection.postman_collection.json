  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "doctor_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', jsonData.access_token);",
                  "    console.log('Token saved:', jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@healthtime.com\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Login as Doctor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', jsonData.access_token);",
                  "    pm.collectionVariables.set('doctor_id', jsonData.user_id);",
                  "    console.log('Token saved:', jsonData.access_token);",
                  "    console.log('Doctor ID saved:', jsonData.user_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.sharma@healthtime.com\",\n  \"password\": \"doctor123\",\n  \"role\": \"doctor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Register Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.sharma@healthtime.com\",\n  \"password\": \"doctor123\",\n  \"full_name\": \"Dr. Rajesh Sharma\",\n  \"phone\": \"+91-9876543210\",\n  \"primary_specialization\": \"Orthopedic Surgery\",\n  \"medical_council_number\": \"MCI-12345-2015\",\n  \"medical_council_state\": \"Maharashtra\",\n  \"experience_years\": 15,\n  \"consultation_fee\": 1500,\n  \"bio\": \"Experienced orthopedic surgeon specializing in joint replacement and sports injuries\",\n  \"location\": \"Mumbai, Maharashtra\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"pincode\": \"400001\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/doctor",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", "doctor"]
            }
          },
          "response": []
        }
      ]
