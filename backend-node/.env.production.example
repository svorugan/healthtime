# Production Environment Configuration
# Copy this to .env on your EC2 instance and update with actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/healthtime

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins - Add your EC2 public IP or domain
# Multiple origins separated by comma
CORS_ORIGINS=http://YOUR_EC2_PUBLIC_IP,http://YOUR_EC2_PUBLIC_IP:3000

# Server Port
PORT=8000

# Environment
NODE_ENV=production

# Optional: AWS S3 Configuration (if using file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
